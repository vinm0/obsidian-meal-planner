{
	"name": "meal-planner",
	"version": "1.0.0",
	"description": "An Obsidian plugin to help plan meals and generate shopping lists.",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint ."
	},
	"keywords": [
		"obsidian",
		"plugin",
		"meal-planner",
		"shopping-list",
		"productivity",
		"food",
		"nutrition",
		"organization",
		"planning",
		"health",
		"diet",
		"recipes",
		"cooking",
		"grocery",
		"meal-prep",
		"meal-tracking",
		"meal",
		"planner"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"esbuild": "0.25.5",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1",
		"@eslint/js": "9.30.1",
		"jiti": "2.6.1"
	},
	"dependencies": {
		"obsidian": "latest"
	}
}
